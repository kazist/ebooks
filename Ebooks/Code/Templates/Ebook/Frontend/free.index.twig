{# empty Twig template #}

{{ set_assets('applications/Ebook/Components/assets/css/ebook.css') }}

{% set item_url = friendly_url('app=ebook&com=ebook&subset=ebook&view=detail&id='~ items.0.id)  %}

<h1 class="component-header"> Ebooks</h1>

<form id="{{ main_form_id }}" action="{{ friendly_url('app=subscription&com=subscription&subset=subscription') }}" method="post" >

    <div class="component-ebooks">

        {% if items|length > 0 %}

            {% for key,ebook in items%}

                {% set download_url = friendly_url('app=ebook&com=ebook&subset=ebook&view=detail&task=download&controller=EbookController&id=' ~ ebook.id) %}
                {% set ebook_url =  friendly_url('app=ebook&com=ebook&subset=ebook&view=detail&id=' ~ ebook.id) %}
                {% set category_url =  friendly_url('app=ebook&com=category&subset=category&view=detail&id=' ~ ebook.category_id) %}

                <div class="component-ebook">
                    <table>
                        <tr>
                            <td>
                                <a href="{{ ebook_url }}" title="{{ ebook.title }}">
                                    <img src="{{ resized_image(ebook.image_file, 100, null, 'fit') }}" alt="{{ ebook.title }}" title="{{ ebook.title }}"/>
                                </a>

                                <label class="label {% if ebook.is_free %}label-default{% else %} label-primary {% endif %}">
                                    {% if ebook.is_free %} Free{% else %} Premium {% endif %}
                                </label>
                            </td>
                            <td valign="top">
                                <h4>
                                    <a href="{{ ebook_url }}" title= "{{ ebook.title }}">
                                        {{ ebook.title }}
                                    </a>
                                </h4>

                                {{ ebook.description|striptags|truncate(300)|raw }}
                                <br>

                                <b>Category:</b>
                                <a href="{{ category_url }}" title=" {{ ebook.category_id_join }}">
                                    {{ ebook.category_id_join }}
                                </a>
                                <br>

                                <a class="btn btn-success btn-xs btn-flat" href="{{ download_url }}" title="Download {{ ebook.file_title }}">Download</a>
                                <a class="btn btn-primary btn-xs btn-flat" href="{{ ebook_url }}" title="View {{ ebook.file_title }}">Preview</a>
                                <div class="clr"></div>
                            </td>
                        </tr>
                    </table>
                </div>


            {% endfor %}
        {% else %}
            No Products
        {% endif %}

    </div>

    {{ forms.input('_token' ) }} 

</form>


<div class="clr"></div>

{% include "items.pagination.twig"%}