{# empty Twig template #}

{% set params = { 'category_id': category_id } %}

{% set related_ebooks = callFunction( "Ebook.Components.Ebook.Models.EbookModel", 'getCategoryEbooks', params ) %}

<div class="component-ebooks">

    {% if related_ebooks|length > 0 %}
        {% for key,ebook in related_ebooks %}

            {% set ebook_url =  friendly_url('app=ebook&com=ebook&subset=ebook&view=detail&id=' ~ ebook.id) %}
            {% set category_url =  friendly_url('app=ebook&com=category&subset=category&view=detail&id=' ~ ebook.category_id) %}

            <div class="col-sm-4">
                <div class="component-ebook">
                    <h4>
                        <a href="{{ ebook_url }}" title="{{ ebook.title }}">
                            {{ ebook.title }}
                        </a>
                    </h4>
                    <a href="{{ ebook_url }}">
                        <img src="{{ resized_image(ebook.image_file,300,300) }}" alt="{{ ebook.title }}" title="{{ ebook.title }}"/>
                    </a>
                    <br>
                    <b>Category:</b>
                    <a href="{{ category_url }}">
                        {{ ebook.category_id_join }}
                    </a>
                    <br>
                    <a class="col-sm-12 btn btn-success btn-xs btn-flat" href="{{ ebook_url }}" title="View Ebook">View Ebook</a>
                    <div class="clr"></div>
                </div>
            </div>
        {% endfor %}

    {% else %}
        No Related Ebooks
    {% endif %}
</div>
